{
  "swagger": "2.0",
  "info": {
    "description": "This is a back end API  for Recipe app",
    "version": "1.0.0",
    "title": "Recipe",
    "contact": {
      "email": "nillohitbanerjee@gmail.com"
    }
  },
  "schemes": [
    "http"
  ],
  "paths": {
    "/services/recipe/filter/categories": {
      "get": {
        "tags": [
          "Recipes"
        ],
        "summary": "List of categories",
        "description": "List of recipy categories",
        "operationId": "listOfCategories",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Categories"
            }
          },
          "204": {
            "description": "No categories found"
          },
          "500": {
            "description": "Internal error occurred"
          }
        }
      }
    },
    "/services/recipe/{category}": {
      "get": {
        "tags": [
          "Recipes"
        ],
        "summary": "List of recipes",
        "description": "list of recipes according to categories and page value",
        "operationId": "findPetsByStatus",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "description": "type of category of recipes or you can provide all",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "formData",
            "description": "pagination value",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Recipes"
            }
          },
          "204": {
            "description": "No categories found"
          },
          "500": {
            "description": "Internal error occurred"
          }
        }
      }
    },
    "/services/recipe/add": {
      "put": {
        "tags": [
          "Recipes"
        ],
        "summary": "add new recipe",
        "description": "",
        "operationId": "updatePet",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Recipe object that needs to be added",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Recipe"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Recipe created"
          },
          "400": {
            "description": "Wrong JSON object"
          },
          "409": {
            "description": "Recipe duplicated"
          },
          "500": {
            "description": "Internal error occurred"
          }
        }
      }
    }
  },
  "definitions": {
    "Category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "categoryName": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Category"
      }
    },
    "Categories": {
      "type": "object",
      "properties": {
        "results": {
          "type": "integer",
          "format": "int64"
        },
        "categories": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Category"
          }
        }
      },
      "xml": {
        "name": "Categories"
      }
    },
    "RecipeHead": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "categories": {
          "$ref": "#/definitions/Categories"
        },
        "yield": {
          "type": "integer",
