          "type": "array",
          "items": {
            "$ref": "#/definitions/IngredientDiv"
          }
        }
      },
      "xml": {
        "name": "Ingredients"
      }
    },
    "Directions": {
      "type": "object",
      "properties": {
        "step": {
          "type": "string"
        }
      },
      "xml": {
        "name": "Directions"
      }
    },
    "Recipe": {
      "type": "object",
      "properties": {
        "directions": {
          "$ref": "#/definitions/Directions"
        },
        "head": {
          "$ref": "#/definitions/RecipeHead"
        },
        "ingredients": {
          "$ref": "#/definitions/Ingredients"
        }
      },
      "xml": {
